<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_manager"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="connect4.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="464">
    <Grid>
        <Grid Name="settings_grid" Visibility="Collapsed">
            <Label Content="Width" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <Label Content="Height" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <Label Content="Hints allowed" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <Label Content="Against AI" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <Label Content="Difficulty" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <xctk:ByteUpDown Name="Width" Value="7" Minimum="1" HorizontalAlignment="Left" Margin="115,55,0,0" VerticalAlignment="Top" Width="125" Height="25"/>
            <xctk:ByteUpDown Name="Height" Value="6" Minimum="1" HorizontalAlignment="Left" Margin="115,90,0,0" VerticalAlignment="Top" Width="125" Height="25"/>
            <CheckBox x:Name="hints_checkbox" Content="CheckBox" HorizontalAlignment="Left" Margin="225,131,0,0" VerticalAlignment="Top" Width="15"/>
            <CheckBox x:Name="AI_checkbox" Content="CheckBox" HorizontalAlignment="Left" Margin="225,166,0,0" VerticalAlignment="Top" Width="15" />
            <Slider x:Name="difficulty_slider" IsEnabled="{Binding ElementName=AI_checkbox, Path=IsChecked}" HorizontalAlignment="Left" Margin="115,200,0,0" VerticalAlignment="Top" Width="125" Maximum="100" TickFrequency="10"/>
            <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="245,235,0,0" VerticalAlignment="Top" Width="75" Click="Start_Click"/>
            <xctk:ByteUpDown Value="{Binding ElementName=difficulty_slider, Path=Value}" IsEnabled="{Binding ElementName=AI_checkbox, Path=IsChecked}" HorizontalAlignment="Left" Margin="260,200,0,0" VerticalAlignment="Top" Width="60"/>
        </Grid>
        <Grid Name="game_grid" Visibility="Visible">
            <Grid Name="label_grid" Margin="0,0,136,0">
                
            </Grid>
            <Label Name="message_label" HorizontalAlignment="Left" Margin="335,20,0,0" VerticalAlignment="Top"/>
            <Button Name="rematch_button" Content="rematch" HorizontalAlignment="Left" Margin="345,55,0,0" VerticalAlignment="Top" Width="75" Visibility="Visible" Click="rematch_button_Click"/>
            <Button Name="settings_button" Content="settings" HorizontalAlignment="Left" Margin="345,80,0,0" VerticalAlignment="Top" Width="75" Visibility="Visible" Click="settings_button_Click"/>
        </Grid>
    </Grid>
</Window>
